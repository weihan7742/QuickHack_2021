# Creating the Welcome Screen

ScreenManager:
    WelcomeScreen:
    ProfileScreen:
    RememberScreen:

<WelcomeScreen>:
    name: 'welcome'
    MDLabel:
        text: "Welcome!"
        font_size: "25sp"
        font_name: "Roboto"
        pos_hint: {"center_x":0.8, "center_y":0.95}

    MDCard:
        size_hint: None, None
        size: 220, 120
        pos_hint: {"center_x":0.5, "center_y":0.8}
        elevation: 5
        md_bg_color: [233/255, 250/255,252/255,1]

    MDFlatButton:
        text: "Who Am I?"
        font_size: "25sp"
        text_color: [29/255, 74/255, 84/255, 1]
        pos_hint: {"center_x":0.5, "center_y":0.8}
        on_press: root.manager.current = "profile"

    MDCard:
        size_hint: None, None
        size:220, 120
        pos_hint: {"center_x":0.5, "center_y":0.5}
        elevation: 5
        md_bg_color: [209/255, 247/255,252/255,1]

    MDFlatButton:
        text: "Who Are They?"
        font_size: "25sp"
        text_color: [29/255, 74/255, 84/255, 1]
        pos_hint: {"center_x":0.5, "center_y":0.5}

    MDCard:
        size_hint: None, None
        size: 220, 120
        pos_hint: {"center_x":0.5, "center_y":0.2}
        elevation: 5
        md_bg_color: [151/255, 236/255,248/255,1]

    MDFlatButton:
        text: "Remember this"
        halign: "center"
        font_size: "25sp"
        text_color: [29/255, 74/255, 84/255, 1]
        pos_hint: {"center_x":0.5, "center_y":0.2}
        on_press: root.manager.current = "remember"

<ProfileScreen>:
    name: 'profile'
    md_bg_color : [1,1,1,1]

    MDLabel:
        text: "This is your Profile:"
        font_size: "25sp"
        font_name: "Roboto"
        pos_hint: {"center_x":0.8, "center_y":0.95}

<RememberScreen>:
    name: 'remember'

    MDLabel:
        text:"Hi"