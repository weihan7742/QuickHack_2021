# Creating the Screens

# Screen management
ScreenManager:
    WelcomeScreen:
    ProfileScreen:

# What user sees when app is launched
<WelcomeScreen>:
    name: 'welcome'
    MDCard:
        size_hint: None, None
        size: 350, 600
        md_bg_color: [1,1,1,1]
        pos_hint: {"center_x":0.5, "center_y":0.5}

    MDLabel:
        text: "Welcome!"
        font_size: "25sp"
        font_name: "Roboto"
        pos_hint: {"center_x":0.8, "center_y":0.95}

    MDCard:
        size_hint: None, None
        size: 220, 120
        pos_hint: {"center_x":0.5, "center_y":0.8}
        elevation: 5
        md_bg_color: [233/255, 250/255,252/255,1]

    MDFlatButton:
        text: "Who Am I?"
        font_size: "25sp"
        text_color: [29/255, 74/255, 84/255, 1]
        pos_hint: {"center_x":0.5, "center_y":0.8}
        on_press:
            root.manager.current = "profile"
            root.manager.transition.direction = 'left'

    MDCard:
        size_hint: None, None
        size:220, 120
        pos_hint: {"center_x":0.5, "center_y":0.5}
        elevation: 5
        md_bg_color: [209/255, 247/255,252/255,1]

    MDFlatButton:
        text: "Who Are They?"
        font_size: "25sp"
        text_color: [29/255, 74/255, 84/255, 1]
        pos_hint: {"center_x":0.5, "center_y":0.5}

    MDCard:
        size_hint: None, None
        size: 220, 120
        pos_hint: {"center_x":0.5, "center_y":0.2}
        elevation: 5
        md_bg_color: [151/255, 236/255,248/255,1]

    MDFlatButton:
        text: "Remember this"
        halign: "center"
        font_size: "25sp"
        text_color: [29/255, 74/255, 84/255, 1]
        pos_hint: {"center_x":0.5, "center_y":0.2}


# Shows the information of the user
<ProfileScreen>:
    name: 'profile'
    MDCard:
        size_hint: None, None
        size: 350, 600
        md_bg_color: [255/255,254/255,223/255,1]
        pos_hint: {"center_x":0.5, "center_y":0.5}

    MDLabel:
        text: "About Myself:"
        bold: True
        font_size: "25sp"
        font_name: "Roboto"
        pos_hint: {"center_x":0.8, "center_y":0.95}

    MDLabel:
        text: "My Name:\n\n\n\n My Age: \n\n\n\n My Address:"
        font_size: "25sp"
        font_name: "Roboto"
        halign: "center"
        valign: "top"
        pos_hint: {"center_x":0.5, "center_y":0.6}

    MDRaisedButton:
        text: "Back to Menu"
        font_size: "30sp"
        font_name: "Roboto"
        md_bg_color: [245/255, 241/255, 129/255, 1]
        elevation: 10
        pos_hint: {"center_x":0.5, "center_y":0.07}
        on_press:
            root.manager.current = "welcome"
            root.manager.transition.direction = 'right'

    # if time allows do call button for caregiver contact



