# Creating the Screens

# Screen management
ScreenManager:
    WelcomeScreen:
    ProfileScreen:
    RememberScreen:
    RecogniseScreen:


# Menu selection for user
<WelcomeScreen>:
    name: 'welcome'
    MDCard:
        size_hint: None, None
        size: 350, 600
        md_bg_color: [1,1,1,1]
        pos_hint: {"center_x":0.5, "center_y":0.5}

    MDLabel:
        text: "Welcome!"
        font_size: "25sp"
        font_name: 'fonts/Lato-Regular.ttf'
        pos_hint: {"center_x":0.8, "center_y":0.95}

    MDCard:
        size_hint: None, None
        size: 220, 120
        pos_hint: {"center_x":0.5, "center_y":0.8}
        elevation: 5
        md_bg_color: [233/255, 250/255,252/255,1]

    MDFlatButton:
        text: "Who Am I?"
        font_size: "25sp"
        text_color: [29/255, 74/255, 84/255, 1]
        pos_hint: {"center_x":0.5, "center_y":0.8}
        on_press:
            root.manager.current = "profile"
            root.manager.transition.direction = 'left'

    MDCard:
        size_hint: None, None
        size:220, 120
        pos_hint: {"center_x":0.5, "center_y":0.5}
        elevation: 5
        md_bg_color: [209/255, 247/255,252/255,1]

    MDFlatButton:
        text: "Who Are They?"
        font_size: "25sp"
        font_name: 'fonts/Lato-Regular.ttf'
        text_color: [29/255, 74/255, 84/255, 1]
        pos_hint: {"center_x":0.5, "center_y":0.5}
        on_press:
            root.manager.current = "recognise"
            root.manager.transition.direction = 'left'

    MDCard:
        size_hint: None, None
        size: 220, 120
        pos_hint: {"center_x":0.5, "center_y":0.2}
        elevation: 5
        md_bg_color: [151/255, 236/255,248/255,1]

    MDFlatButton:
        text: "Remember \nthis person"
        halign: "center"
        font_size: "25sp"
        font_name: 'fonts/Lato-Regular.ttf'
        text_color: [29/255, 74/255, 84/255, 1]
        pos_hint: {"center_x":0.5, "center_y":0.2}
        on_press:
            root.manager.current = "remember"
            root.manager.transition.direction = 'left'



# Shows the information of the user
<ProfileScreen>:
    name: 'profile'
    MDCard:
        size_hint: None, None
        size: 350, 600
        md_bg_color: [255/255,254/255,223/255,1]
        pos_hint: {"center_x":0.5, "center_y":0.5}

    MDLabel:
        text: "About Myself"
        bold: True
        font_size: "25sp"
        font_name: 'fonts/Lato-Bold.ttf'
        pos_hint: {"center_x":0.8, "center_y":0.95}


    MDLabel:
        text: "My Name: Ian Teo\n\n\n\n My Age:63 \n\n\n\n My Address: \nA14-1, Some Street, \nA City, Malaysia"
        font_size: "25sp"
        font_name: 'fonts/Lato-Regular.ttf'
        halign: "center"
        valign: "top"
        pos_hint: {"center_x":0.5, "center_y":0.6}

    MDRaisedButton:
        text: "Menu"
        font_size: "30sp"
        font_name: 'fonts/Lato-Regular.ttf'
        md_bg_color: [245/255, 241/255, 129/255, 1]
        elevation: 10
        pos_hint: {"center_x":0.5, "center_y":0.07}
        on_press:
            root.manager.current = "welcome"
            root.manager.transition.direction = 'right'




# User inputs names they want to remember
<RememberScreen>:
    name: 'remember'
    Image:
        source:
        size: self.texture_size
        pos_hint: {"center_x":0.5, "center_y":0.1}

    MDLabel:
        text: "Who is this person?"
        font_size: "25sp"
        font_name: 'fonts/Lato-Regular.ttf'
        text_color: [52/255, 53/255, 84/255, 1]
        halign: "center"
        valign: "top"
        pos_hint: {"center_x":0.5, "center_y":0.5}

    MDTextField:
        hint_text:"Enter their name"
        pos_hint: {'center_x': 0.5, 'y':0.3}
        multiline: True
        size_hint: (0.75, 0.1)
        mode: "rectangle"
        halign: "center"

    MDRaisedButton:
        text: "Menu"
        font_size: "30sp"
        font_name: 'fonts/Lato-Regular.ttf'
        md_bg_color: [151/255, 236/255,248/255,1]
        elevation: 10
        pos_hint: {"center_x":0.25, "center_y":0.1}
        on_press:
            root.manager.current = "welcome"
            root.manager.transition.direction = 'right'

    MDRaisedButton:
        text: "Save"
        font_size: "30sp"
        font_name: 'fonts/Lato-Regular.ttf'
        md_bg_color: [151/255, 236/255,248/255,1]
        elevation: 10
        pos_hint: {"center_x":0.75, "center_y":0.1}
        on_press:
            app.popup_msg()


# When user doesn't recognise a person, use this feature to do facial recognition to check
<RecogniseScreen>:
    name: "recognise"
    orientation: "vertical"
    MDRaisedButton:
        text: "Camera"
        font_size: "30sp"
        font_name: 'fonts/Lato-Regular.ttf'
        md_bg_color: [151/255, 236/255,248/255,1]
        elevation: 10
        pos_hint: {"center_x":0.75, "center_y":0.1}
        on_press:
            app.load_facial()

    MDRaisedButton:
        text: "Stop"
        font_size: "30sp"
        font_name: 'fonts/Lato-Regular.ttf'
        md_bg_color: [151/255, 236/255,248/255,1]
        elevation: 10
        pos_hint: {"center_x":0.75, "center_y":0.1}
        on_press:
            app.stop_facial()

    MDLabel:
        text: "Name: \n\n\n\nRelationship:"
        font_size: "25sp"
        font_name: 'fonts/Lato-Regular.ttf'
        text_color: [52/255, 53/255, 84/255, 1]
        halign: "center"
        valign: "top"
        pos_hint: {"center_x":0.5, "center_y":0.4}

    MDRaisedButton:
        text: "Menu"
        font_size: "30sp"
        font_name: 'fonts/Lato-Regular.ttf'
        md_bg_color: [151/255, 236/255,248/255,1]
        elevation: 10
        pos_hint: {"center_x":0.5, "center_y":0.1}
        on_press:
            root.manager.current = "welcome"
            root.manager.transition.direction = 'right'

    # if time allows do call button for caregiver contact




